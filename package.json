{
    "name": "@orbit-ui/tachyons",
    "version": "7.1.0",
    "description": "Custom Tachyons for Sharegate Orbit UI",
    "repository": "https://github.com/gsoft-inc/sg-orbit.git",
    "license": "Apache-2.0",
    "main": "dist/tachyons.css",
    "style": "dist/tachyons.css",
    "publishConfig": {
        "access": "public",
        "directory": "dist"
    },
    "peerDependencies": {
        "@orbit-ui/foundation": "*"
    },
    "devDependencies": {
        "copy-files": "^0.1.0",
        "immutable-css-cli": "^1.1.1",
        "normalize.css": "^8.0.0",
        "tachyons-modules": "^1.1.10",
        "tachyons-cli": "^1.3.2",
        "watch": "^1.0.2",
        "shelljs": "0.8.4",
        "npm-run-all": "4.1.5",
        "np": "7.5.0",
        "postcss": "7.0.35",
        "postcss-cli": "7.1.2",
        "postcss-safe-important": "1.2.0"    
    },
    "scripts": {
        "setup": "yarn create-dist",
        "start": "yarn watch",
        "prebuild": "yarn clean",
        "build": "run-p build-css build-docs",
        "postbuild": "yarn copy-to-dist",
        "build-watch": "run-p build-css build-docs",
        "build-css": "run-s build-temp build-transform",
        "build-temp": "tachyons src/tachyons.css --preserve-variables > temp/tachyons.css",
        "build-transform": "postcss temp/tachyons.css -o dist/tachyons.css",
        "build-docs": "run-s build-docs-temp build-docs-transform",
        "build-docs-temp": "run-p build-docs-temp:*",
        "build-docs-temp:colors": "tachyons docs/src/colors.css --preserve-variables > docs/temp/colors.css",
        "build-docs-temp:shadows": "tachyons docs/src/shadows.css --preserve-variables > docs/temp/shadows.css",
        "build-docs-temp:flexbox": "tachyons docs/src/flexbox.css --preserve-variables > docs/temp/flexbox.css",
        "build-docs-temp:grid": "tachyons docs/src/grid.css --preserve-variables > docs/temp/grid.css",
        "build-docs-temp:borders": "tachyons docs/src/borders.css --preserve-variables > docs/temp/borders.css",
        "build-docs-temp:spacing": "tachyons docs/src/spacing.css --preserve-variables > docs/temp/spacing.css",
        "build-docs-temp:typography": "tachyons docs/src/typography.css --preserve-variables > docs/temp/typography.css",
        "build-docs-transform": "run-p build-docs-transform:*",
        "build-docs-transform:colors": "postcss docs/temp/colors.css -o docs/dist/colors.css --config docs/postcss.config.js",
        "build-docs-transform:shadows": "postcss docs/temp/shadows.css -o docs/dist/shadows.css --config docs/postcss.config.js",
        "build-docs-transform:flexbox": "postcss docs/temp/flexbox.css -o docs/dist/flexbox.css --config docs/postcss.config.js",
        "build-docs-transform:grid": "postcss docs/temp/grid.css -o docs/dist/grid.css --config docs/postcss.config.js",
        "build-docs-transform:borders": "postcss docs/temp/borders.css -o docs/dist/borders.css --config docs/postcss.config.js",
        "build-docs-transform:spacing": "postcss docs/temp/spacing.css -o docs/dist/spacing.css --config docs/postcss.config.js",
        "build-docs-transform:typography": "postcss docs/temp/typography.css -o docs/dist/typography.css --config docs/postcss.config.js",
        "watch": "watch \"yarn build-watch\" ./src/",
        "clean": "yarn clear-dist",
        "clear-dist": "node scripts/clear-dist",
        "create-dist": "node scripts/create-dist",
        "copy-to-dist": "node scripts/copy-to-dist"
      }
}